<h2>Details</h2>
<h3><%= @restaurant.name %></h3>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<% @restaurant.reviews.each do |review| %>
  <p>"<%= review.content %>"</p><p>rating: <%= review.rating %></p>
<% end %>


<%= link_to "See all", restaurants_path, class: "btn btn-light" %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-light" %>

